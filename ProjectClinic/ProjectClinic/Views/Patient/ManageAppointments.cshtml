@model List<ProjectClinic.ViewModels.ManageAppointmentsViewModel>
@{
    ViewBag.Title = "Manage Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    table th, td {
        padding: 10px;
    }
</style>
<h2>Manage Appointments</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            @foreach (var item in Model)
            {
                <table class="table-bordered">

                    <tr>
                        <th>Appointment Date and time</th>
                        <td>@item.Appointment.DateTime</td>
                    </tr>
                    <tr>
                        <th>Doctor Name</th>
                        <td>@item.DoctorName</td>
                    </tr>
                </table>

                string divId = item.Appointment.Id + "";

                @Ajax.ActionLink("Edit Appointment", "EditAppointment", "Patient", new { id = item.Appointment.Id }, 
                    new AjaxOptions()
                    {
                        UpdateTargetId = divId,
                        InsertionMode = InsertionMode.Replace

                    },
                    new { @class = "btn btn-info mr-2 mt-2" }
                    )
                @Ajax.ActionLink("Cancel Appointment", "CancelAppointment", "Patient", new { id = item.Appointment.Id },
                    new AjaxOptions()
                    {
                        UpdateTargetId = divId,
                        InsertionMode = InsertionMode.Replace

                    },
                    new { @class = "btn btn-info mt-2" }
                    )
                // content replaced when cancel appointment is pressed
                <div id="@divId"></div>
                <hr />
            }
        </div>
        <div class="col-6">
            @* contents of this div are replaced when an edit button is pressed *@
            <div id="contentEdit"></div>
        </div>
    </div>
</div>


    @Html.ActionLink("Book an Appointment", "BookAppointment", null, new { @class = "btn btn-primary" })


<div id="content">

</div>


    
@section scripts
{
    
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    
        
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

}
    